<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="apps" name="Apps" schema="schema/apps.exsd"/>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/"
            base-name="war">
      </resource>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/home/greet"
            class="org.eclipse.os.home.server.GreetingServiceImpl">
      </servlet>
   </extension>
   <extension
         id="app"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="home.app"
            name="Eclipse OS">
         <property
               name="appName"
               value="Eclipse OS">
         </property>
      </product>
   </extension>

</plugin>
